@model JLD.RiverLane.ViewModels.Users.PasswordModel

<div class="form-group">
    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2 required" })
    <div class="col-md-10 has-feedback">
        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control newPassword", aria_describedby = "passwordHelp", @autocomplete = "off" } })
        <span class="glyphicon glyphicon-remove form-control-feedback text-danger" aria-hidden="true"></span>
        <p id="passwordHelp" class="help-hint">Passwords must be 8 or more characters long and contain: a lowercase character, an uppercase character and a number.</p>
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.ConfirmPassword, htmlAttributes: new { @class = "control-label col-md-2 required" })
    <div class="col-md-10 has-feedback">
        @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control confirmPassword", @autocomplete = "off" } })
        <span class="glyphicon glyphicon-remove form-control-feedback text-danger" aria-hidden="true"></span>
    </div>
    @Html.ValidationMessageFor(x => x.ConfirmPassword)
</div>