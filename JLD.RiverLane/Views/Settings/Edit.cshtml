@model JLD.RiverLane.ViewModels.Settings.SettingsEditModel

@{
    ViewBag.Title = "Edit Settings";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("edit", "settings", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <div class="panel panel-default">

        <div class="panel-heading">
            Contact Settings
        </div>

        <div class="panel-body">

            <div class="form-horizontal">
                <div class="form-group">

                    @Html.LabelFor(model => model.ContactEmail, new { @class = "control-label col-md-2 required" })
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.ContactEmail, new { htmlAttributes = new { @class = "form-control" } })
                    </div>

                    @Html.LabelFor(model => model.ContactNumber, new { @class = "control-label col-md-2 required" })
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.ContactNumber, new { htmlAttributes = new { @class = "form-control" } })
                    </div>

                </div>
            </div>

            @Html.EditorFor(model => model.Address)

        </div>

    </div>

    <input type="submit" class="btn btn-primary pull-right" value="Save Changes" />

}